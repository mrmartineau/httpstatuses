extends layout.jade

block title
  title !{code} !{title} &mdash; httpstatuses.zander.wtf

block description
  meta(name='description' content='HTTP Status Code ' + code + ': ' + excerpt)

block banner
  .banner: .container: .row: .twelve.columns
    p #[a(href='/') &larr; Return to httpstatuses.zander.wtf]


block contents
  block banner
  article.code.container
    h2 !{groups.codes[set].title}
    h1 #[span !{code}] !{title}
    != contents
    if references
      h1.section #[span !{code}] Code References
      each value, key in references
        p !{key} #[code !{value}]
    a(href='/') &larr; Return to httpstatuses.zander.wtf
